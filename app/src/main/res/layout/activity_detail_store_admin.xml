<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#81C784"
    tools:context=".Activity.Admin.DetailStoreAdminActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:id="@+id/imgStore_detailAdmin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_store_black_24dp" />

        <TextView
            android:id="@+id/txtNameStore_detaiAdmin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:hint="Ten cua hang"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:drawableLeft="@drawable/ic_location_on_black_24dp"
        android:hint="Dia chi"
        android:id="@+id/txtAddressStore_detaiAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:drawableLeft="@drawable/ic_local_phone_black_24dp"
        android:hint="So dien thoai"
        android:id="@+id/txtNumberPhoneStore_detaiAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/lstDetailStore_detailAdmin"
        android:layout_width="match_parent"
        android:layout_height="400dp"></ListView>
    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_weight="1"
            android:id="@+id/btnDeleteStore_detailAdmin"
            android:text="Xóa Cửa Hàng"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button
            android:layout_weight="1"
            android:id="@+id/btnEditStore_detailAdmin"
            android:text="Sửa Thông tin"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>