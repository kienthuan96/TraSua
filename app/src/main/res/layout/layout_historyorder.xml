<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="5dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:padding="4dp"
        android:background="@drawable/custom_edittext_login"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingLeft="30dp"
            android:id="@+id/txtAddressOrder_historyOrder"
            android:text="Dia chi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingLeft="30dp"
            android:id="@+id/txtPriceOrder_historyOrder"
            android:text="Gia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingRight="30dp"
            android:gravity="right"
            android:id="@+id/txtDateOrder_historyOrder"
            android:text="Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingRight="30dp"
            android:gravity="right"
            android:id="@+id/txtStatusOrder_historyOrder"
            android:text="Status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#F44336"
            android:gravity="center"
            android:id="@+id/txtCodeOrder_historyOrder"
            android:text="Ma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>
