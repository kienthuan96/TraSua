<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity">

    <RelativeLayout
        android:layout_width="374dp"
        android:layout_height="394dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="107dp">
        <!-- Email Label -->

        <TextView
            android:textColor="#121111"
            android:layout_marginLeft="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Account:"
            android:layout_marginTop="40dp"
            android:textSize="25sp"/>

        <EditText
            android:singleLine="true"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:textSize="23sp"
            android:hint="Input your account ..."
            android:textColor="#212121"
            android:id="@+id/edtAccount_login"
            android:layout_marginTop="90dp"
            android:padding="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="5dp"
            android:textColor="#131313"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:layout_marginTop="140dp"
            android:textSize="25sp"/>

        <EditText
            android:singleLine="true"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:textSize="23sp"
            android:hint="Input your password"
            android:textColor="#212121"
            android:id="@+id/edtPassword_login"
            android:layout_marginTop="180dp"
            android:padding="9dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            />

        <CheckBox
            android:id="@+id/chkSaveInfo_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtPassword_login"
            android:text="Lưu thông tin" />

        <com.spark.submitbutton.SubmitButton
            android:id="@+id/btnSubmit_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/txtRegister_login"
            android:layout_centerHorizontal="true"
            android:text="Login"
            android:textStyle="bold"
            android:textColor="@color/gray"
            app:sub_btn_background="#FFFF00"
            app:sub_btn_duration="900"
            app:sub_btn_line_color="#0277BD"
            app:sub_btn_ripple_color="#0277BD"
            app:sub_btn_tick_color="#FFFF00" />


        <TextView
            android:textColor="#0d0d0d"
            android:layout_gravity="center"
            android:id="@+id/txtRegister_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="340dp"
            android:layout_marginBottom="24dp"
            android:text="No account yet? Create one"
            android:gravity="center"
            android:textSize="16dip"/>
    </RelativeLayout>

</RelativeLayout>