<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Login.RegisterActivity">

    <TextView
        android:layout_marginTop="2dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="40sp"
        android:text="@string/text_title_register"/>

    <ImageView
        android:id="@+id/imgAvatar_register"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginEnd="68dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/ic_person_black_24dp" />

    <Spinner
        android:id="@+id/spnStatusUser_register"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="71dp" />

    <LinearLayout
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="112dp"
        android:orientation="vertical">

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:fontFamily="@font/cucho_bold"
                android:id="@+id/edtAccount_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/text_input_account_register"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:fontFamily="@font/cucho_bold"
                android:id="@+id/edtFullName_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/text_input_name_register"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:fontFamily="@font/cucho_bold"
                android:inputType="textPassword"
                android:id="@+id/edtPassword_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/text_input_password_register"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:fontFamily="@font/cucho_bold"
                android:inputType="textPassword"
                android:id="@+id/edtRePassword_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/text_input_password_register"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:fontFamily="@font/cucho_bold"
                android:id="@+id/edtPhone_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/text_input_number_register"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>
    </LinearLayout>


    <android.support.v7.widget.AppCompatButton
        android:fontFamily="@font/cucho_bold"
        android:background="@color/button_register"
        android:id="@+id/btnRegister"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="43dp"
        android:padding="10dp"
        android:text="@string/text_button_register"
        android:textSize="22sp" />
</RelativeLayout>