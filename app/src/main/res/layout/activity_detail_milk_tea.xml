<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#81C784"
    tools:context=".Activity.User.DetailMilkTeaActivity">

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgMilkTea_detailMilkTea"
            android:src="@drawable/ic_store_black_24dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp" />
        <TextView
            android:textSize="30dp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/txtNameMilkTea_detailMilkTea"
            android:text="Ten Tra Sua"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Tên quán"
            android:textSize="15dp" />

        <TextView
            android:textSize="15dp"
            android:id="@+id/txtStoreMilkTea_detailMilkTea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ten Quan" />
    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="26dp">
        <TextView
            android:textSize="15dp"
            android:text="Giá "
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:textSize="15dp"
            android:layout_weight="1"
            android:id="@+id/txtPriceMilkTea_detailMilkTea"
            android:text="Gia tien"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <TextView
        android:textSize="15dp"
        android:id="@+id/txtDecriptionMilkTea_detailMilkTea"
        android:text="Mieu ta"
        android:layout_width="match_parent"
        android:layout_height="26dp" />

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="26dp">
        <EditText
            android:textSize="15dp"
            android:hint="Số lượng"
            android:layout_weight="1"
            android:id="@+id/edtAmountMilkTea_detailMilkTea"
            android:inputType="number"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:textSize="15dp"
            android:layout_weight="1"
            android:id="@+id/btnOrder_detailMilkTea"
            android:text="Đặt hàng"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>